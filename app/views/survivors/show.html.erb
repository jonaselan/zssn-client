<div class="container-center">
  <div class="row">
    <div class="col-md-4">
      <div class="profile-img">
        <img src="http://s3.amazonaws.com/37assets/svn/765-default-avatar.png" alt="">
      </div>
    </div>
    <div class="col-md-8">
      <div class="col-md-12">
        <h1> Hello, <%= @survivor['name'] %>! </h1>
      </div>
      <div class="col-md-12">
        <!-- Trigger the modal with a button -->
        <a href="#" data-toggle="modal" data-target="#edit-location-modal"> <span class="glyphicon glyphicon-pencil"></span> Edit your location </a>
        <%= google_maps(@survivor['latitude'], @survivor['longitude']) %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <p>Age: </p>
      <h4><%= @survivor['age'] %></h4>
    </div>
    <div class="col-md-12">
      <p>Gender: </p>
      <h4><%= @survivor['gender'] %></h4>
    </div>
    <div class="col-md-12">
      <p>Infection occurences: </p>
      <h4><%= @survivor['infection_occurences'] %></h4>
    </div>
    <div class="col-md-12">
      <p>Join at: </p>
      <h4><%= @survivor['created_at'].to_datetime.strftime('%d/%m/%Y') %></h4>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="edit-location-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit</h4>
      </div>
      <div class="modal-body">
        <%= form_tag("/survivors/#{@survivor['id']}", method: :put, class: 'form-group') do%>
          <label for="lat">latitude</label>
          <input type="number" class="form-control" name="lat">
          <label for="long">longitude</label> <br>
          <input type="number" class="form-control" name="long">
          <div class="modal-footer">
            <input type="submit" class="btn btn-default" value="Save">
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>
